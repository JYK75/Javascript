function solution(n) {
    let answer = '';
    while(n > 0) {
        if(n % 3 == 0)
        {
            answer = '4' + answer;
            n = parseInt(n/3) - 1;
        }
        else if(n % 3 == 1)
        {
            answer = '1' + answer;
            n = parseInt(n/3);
        }
        else
        {
            answer = '2' + answer;
            n = parseInt(n/3);
        }
    }
    return answer;
}
